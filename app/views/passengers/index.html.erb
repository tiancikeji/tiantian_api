<h1>Listing passengers</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Mobile</th>
    <th>Lat</th>
    <th>Long</th>
    <th>Password</th>
    <th>CreateAt</th>
    <th>iosDevice</th>
    <th>androidDevice</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @passengers.each do |passenger| %>
  <tr>
    <td><%= passenger.id %></td>
    <td><%= passenger.name %></td>
    <td><%= passenger.mobile %></td>
    <td><%= passenger.lat %></td>
    <td><%= passenger.lng %></td>
    <td><%= passenger.password %></td>
    <td><%= passenger.created_at %></td>
    <td><%= passenger.iosDevice %></td>
    <td><%= passenger.androidDevice %></td>
    <td><%= link_to 'Show', passenger %></td>
    <td><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
    <td><%= link_to 'Destroy', passenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

